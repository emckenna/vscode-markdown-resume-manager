{
  "name": "markdown-resume-manager",
  "displayName": "Markdown Resume Manager",
  "description": "Manage markdown-based resumes and cover letters with automated build support",
  "version": "1.0.1",
  "publisher": "EricMcKenna",
  "author": "Eric McKenna",
  "license": "MIT",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/emckenna/vscode-markdown-resume-manager.git"
  },
  "bugs": {
    "url": "https://github.com/emckenna/vscode-markdown-resume-manager/issues"
  },
  "homepage": "https://github.com/emckenna/vscode-markdown-resume-manager#readme",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "resume",
    "cover letter",
    "pandoc",
    "job search",
    "document generation"
  ],
  "activationEvents": [
    "workspaceContains:**/*.md"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownResumeManager.initProject",
        "title": "Initialize Project Structure",
        "category": "Resume Manager"
      },
      {
        "command": "markdownResumeManager.newResume",
        "title": "Create New Resume",
        "category": "Resume Manager"
      },
      {
        "command": "markdownResumeManager.newCoverLetter",
        "title": "Create New Cover Letter",
        "category": "Resume Manager"
      },
      {
        "command": "markdownResumeManager.buildDocument",
        "title": "Build Current Document (DOCX)",
        "category": "Resume Manager"
      },
      {
        "command": "markdownResumeManager.buildDocumentPDF",
        "title": "Build Current Document (DOCX + PDF)",
        "category": "Resume Manager"
      },
      {
        "command": "markdownResumeManager.openBuildFolder",
        "title": "Open Build Folder",
        "category": "Resume Manager"
      }
    ],
    "keybindings": [
      {
        "comment": "Default keybindings designed to avoid conflicts with VS Code built-in shortcuts. Feel free to customize these in your VS Code settings (File > Preferences > Keyboard Shortcuts).",
        "command": "markdownResumeManager.newResume",
        "key": "ctrl+k ctrl+alt+n",
        "mac": "cmd+k cmd+alt+n"
      },
      {
        "command": "markdownResumeManager.newCoverLetter",
        "key": "ctrl+k ctrl+alt+c",
        "mac": "cmd+k cmd+alt+c"
      },
      {
        "command": "markdownResumeManager.buildDocument",
        "key": "ctrl+k ctrl+alt+b",
        "mac": "cmd+k cmd+alt+b",
        "when": "editorLangId == markdown && (resourcePath =~ /[/\\\\](resumes|cover-letters)[/\\\\]/i)"
      },
      {
        "command": "markdownResumeManager.buildDocumentPDF",
        "key": "ctrl+k ctrl+alt+d",
        "mac": "cmd+k cmd+alt+d",
        "when": "editorLangId == markdown && (resourcePath =~ /[/\\\\](resumes|cover-letters)[/\\\\]/i)"
      }
    ],
    "configuration": {
      "title": "Markdown Resume Manager",
      "properties": {
        "markdownResumeManager.resumeOutputName": {
          "type": "string",
          "default": "Your_Name_Resume",
          "description": "Output filename for resumes (without extension)"
        },
        "markdownResumeManager.coverLetterOutputName": {
          "type": "string",
          "default": "Your_Name_Cover_Letter",
          "description": "Output filename for cover letters (without extension)"
        },
        "markdownResumeManager.pandocPath": {
          "type": "string",
          "default": "pandoc",
          "description": "Path to Pandoc executable. On Windows, use the full path if Pandoc is not in PATH (e.g., 'C:\\Program Files\\Pandoc\\pandoc.exe')"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test",
    "lint": "echo 'No linting configured'",
    "package": "mkdir -p dist && vsce package --out dist/",
    "prepublish": "npm test",
    "publish": "bash -c 'export $(grep -v \"^#\" .env | xargs) && vsce publish --pat $VSCE_PAT'",
    "publish:major": "bash -c 'export $(grep -v \"^#\" .env | xargs) && vsce publish major --pat $VSCE_PAT'",
    "publish:minor": "bash -c 'export $(grep -v \"^#\" .env | xargs) && vsce publish minor --pat $VSCE_PAT'",
    "publish:patch": "bash -c 'export $(grep -v \"^#\" .env | xargs) && vsce publish patch --pat $VSCE_PAT'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.6.2"
  }
}
